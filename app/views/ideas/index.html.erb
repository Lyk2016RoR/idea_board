<% @ideas.each do |idea| %>
	<div class="panel panel-default">
		<div class="panel-heading">
			<i class="fa fa-plus"></i> 
			<%= link_to idea.category.title, category_path(idea.category) %>
			<i class="fa fa-angle-right"></i>
			<%= link_to idea.title, idea_path(idea) %> 
			<span class="pull-right label label-success">{<%= idea.average_rating %>}</span>
		</div>
		<div class="panel-body">
			<p>
				<%= idea.description %>
			</p>
		</div>
    	<div class="panel-footer">
			<div class="pull-left">
				<p>
					<span><i class="fa fa-user"></i> <strong>Ekleyen:</strong> 
					<a href="#"><%= idea.user.email %></a></span>
					<span>
						<i class="fa fa-calendar-o"></i>
						<strong>Eklenme Tarihi:</strong>
						<%= 
	idea.user.created_at.strftime("%d %B %Y") 
						%>
						</span>
		 	   	</p>
		  	</div>
	      	<div class="pull-right">
				<%= link_to idea_path(idea), class: "btn btn-default" do %>
					Devamını Oku
					<i class="fa fa-angle-right"></i> 
				<% end %>
	      	</div>
	      	<div class="clearfix"></div>
    	</div>
	</div>
<% end %>

