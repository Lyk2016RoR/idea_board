<%= form_for @idea do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: 'title', class: "form-control input-sm" %><br>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description, placeholder: "description", rows: 10 %><br>
  <br>
  <%= f.label :planned_to %>
  <br>
  <%= f.date_select :planned_to, placeholder: 'date' %><br>
  <br>
  <%= f.select :category_id, @categories %>
  <br>
  <br>

  <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) %>


   <br />
   <br />
   <br />

  <%= f.submit 'Gonder' %>
<% end %>
